{
  "name": "shader-theme",
  "version": "0.0.1",
  "private": true,
  "description": "One-click WebGL shader theme system for Next.js",
  "scripts": {
    "dev": "pnpm --filter demo dev",
    "build": "pnpm --filter demo build",
    "test": "pnpm --filter @shader-theme/core test && pnpm --filter shader-theme test",
    "test:all": "pnpm -r test",
    "test:core": "pnpm --filter @shader-theme/core test",
    "test:cli": "pnpm --filter shader-theme test",
    "test:browser": "pnpm --filter @shader-theme/core test:browser",
    "build:packages": "pnpm --filter @shader-theme/core build && pnpm --filter shader-theme build",
    "lint": "pnpm -r lint"
  },
  "engines": {
    "node": ">=18"
  },
  "pnpm": {
    "onlyBuiltDependencies": [
      "esbuild",
      "sharp",
      "unrs-resolver"
    ]
  }
}